

.video-embed:hover {
    transform: rotate(0deg);
}

.yaldy-image1 img, .yaldy-image2 img, .yaldy-image3 img, .yaldy-image4 img {
    width: 100%;
    height: auto;
}

.yaldy-image1, .yaldy-image2, .yaldy-image3, .yaldy-image4 {
    display: inline-block;
    width: 100%;
    margin: 10px 0;
    transform: rotate(-2deg);
    transition: transform 0.6s;
}

.yaldy-image2 {
    transform: rotate(2deg);
}

.yaldy-image4 {
    position: absolute;
    z-index: 2;
    top: 45px;
    left: 4vw;
    width: 35vw;
}

.logos {
    list-style: none;
    font-size: 0;
}

.logos li {
    width: 150px;
    height: 75px;
    background-size: contain;
    pointer-events: none;
}

.logos li a {
    width: 100%;
    height: 100%;
    display: block;
}

