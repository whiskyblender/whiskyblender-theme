@media only screen and (min-width: 600px) {
    
    .yaldy-image1 {
        position: absolute;
        width: 600px;
        top: -20%;
        left: 750px;
        z-index: 2;
        transform: rotate(6deg);
    }
    
    .yaldy-image2 {
        position: absolute;
        width: 400px;
        bottom: -30%;
        left: 750px;
        z-index: 2;
        transform: rotate(-4deg);
    }
    
    .yaldy-image3 {
        position: absolute;
        width: 300px;
        top: 20%;
        left: 770px;
        z-index: 2;
        transform: rotate(-12deg);
    }

    .yaldy-image4 {
        left: 20px;
        width: 140px;
        transform: rotate(-10deg);
    }

    .logos li {
        width: 200px;
        height: 100px;
    }
    
}

@media only screen and (min-width: 1064px) {
    
    .yaldy-image1 {
        width: 750px;
        top: -30%;
        right: -60%;
        left: auto;
        transform: rotate(6deg);
    }
    
    .yaldy-image1:hover {
        transform: rotate(5deg);
    }
    
    .yaldy-image2 {
        width: 440px;
        bottom: -35%;
        right: -34%;
        left: auto;
        transform: rotate(-4deg);
    }
    
    .yaldy-image2:hover {
        transform: rotate(-5deg);
    }
    
    .yaldy-image3 {
        width: 400px;
        top: 10%;
        right: auto;
        left: -85%;
        transform: rotate(-12deg);
    }
    
    .yaldy-image3:hover {
        transform: rotate(-11deg);
    }

    .yaldy-image4 {
        left: 20px;
        width: 240px;
        transform: rotate(-15deg);
    }

    .logos li {
        width: 300px;
        height: 150px;
    }
    
}