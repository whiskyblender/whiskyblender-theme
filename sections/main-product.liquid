<script>
  $(document).ready(function () {
    $('.owl-carousel').owlCarousel({
      loop: true,
      margin: 20,
      nav: true,
      items: 1,
      center: true,
    });
  });

  // add a class to the owl-item that comes before the active item and the one that comes after
  $(document).ready(function () {
    $('.owl-carousel').on('changed.owl.carousel', function (event) {
      $('.owl-item').removeClass('before-active');
      $('.owl-item').removeClass('after-active');
    });
    $('.owl-carousel').on('changed.owl.carousel', function (event) {
      $('.active').prev().addClass('before-active');
      $('.active').next().addClass('after-active');
    });
  });
</script>
