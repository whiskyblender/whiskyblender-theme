<section id="shop-bottles" class="standard">
  <article>
    <a id="bottlings"></a>
    <h3 class="section-title-wb">{{ section.settings.title }}</h3>
    <p>
      {{ section.settings.description }}
    </p>
    <ul class="product-list">
      {% assign bottles = collections['oor-bottlings'] %}

      {% for product in bottles.products %}
          <li class="product-list-card">
            <a
              href="{{ product.url }}"
              style="background-image: url({{ product.featured_image | img_url: '1000x1000' }})"
            >
              <img alt=" Product image" src="{{ product.featured_image | img_url: '1000x1000' }}">

              <span class="deetz ">
                <h4>{{ product.title }}</h4>
                <div class="reveal">
                  <p>{{ product.type | truncate: 30 }}</p>

                  {% if product.available == false %}
                    <!-- Product is out of stock -->
                    <sup> Out of stock</sup>
                  {% elsif product.compare_at_price %}
                    <sup class="buy pulse">{{ product.price | money }}</sup>
                    <sup class="sale">{{ product.compare_at_price | money }}</sup>
                  {% else %}
                    <sup class="buy pulse">{{ product.price | money }}</sup>
                  {% endif %}
                </div>
              </span>
            </a>
          </li>
      {% endfor %}
    </ul>
  </article>
</section>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
  {
  }
{% endjavascript %}

{% schema %}
{
  "name": "Shop Bottles",
  "presets": [{ "name": "Shop Bottles" }],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Header Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],

  "tag": "section"
}
{% endschema %}
