<section class="banding">
  <article class="max">
    <h3 class="section-title-wb">{{ section.settings.collection.title }}</h3>
    <p>
      {{ section.settings.collection.description }}
    </p>
    <ul class="product-list">
      {%- for product in section.settings.collection.products -%}
        {% render 'product-display', product: product %}
      {% endfor %}
    </ul>
    <button onclick="{{ section.settings.button_link }}" class="secondary-button">{{ section.settings.button_text }}</button>
  </article>
</section>

{% schema %}
{
  "name": "Shop Collection",
    "presets": [{ "name": "Shop Collection" }],

  "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      },
        {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
        {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
  ],
}
{% endschema %}
