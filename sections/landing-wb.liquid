{% stylesheet %}
  h3 {
    font-family: 'TrimPosterWebCompressed', sans-serif;
    font-weight: 400;
    color: #000;
    margin: 0 0 20px 0;
    font-size: calc(10vw + 22px);
    line-height: calc(9vw + 14px);
  }
  @media only screen and (min-width: 1064px) {
    h3 {
      font-size: 128px;
      line-height: 106px;
      margin: 20px 0 40px 0;
    }
  }
  .get-started-link {
    text-decoration: none;
  }
  .bg-grey {
    background: #eaeaea;
  }
  .step {
    line-height: 1.5;
  }
  .step h4 {
    position: relative;
    font-family: 'trimPosterCompressed', sans-serif;
    font-weight: 400;
    font-size: 62px;
    line-height: 40px;
    display: block;
    margin: 40px 0 0 0;
    vertical-align: bottom;
    font-size: 62px;
    line-height: 50px;
    margin: -10px 0 0 0;
    z-index: 2;
  }

  @media only screen and (min-width: 600px) {
    .step h4 {
      font-size: 100px;
      margin-top: -50px;
      line-height: 80px;
    }
  }

  p.intro {
    font-size: 24px;
    line-height: 32px;

    @media only screen and (min-width: 768px) {
      font-size: 32px;
      line-height: 46px;
    }
  }

  p.help {
    font-size: 16px;
    margin-bottom: 30px;
    color: #666666;
    line-height: 22px;
    font-style: italic;
  }

  .pulse {
    animation: pulse-animation 2s infinite;
  }
  @keyframes pulse-animation {
    0% {
      box-shadow: 0 0 0 0px rgba(25, 151, 118, 1);
    }
    100% {
      box-shadow: 0 0 0 16px rgba(25, 151, 118, 0);
    }
  }

  .home-image1 img,
  .home-image2 img,
  .home-image3 img,
  .home-image4 img {
    width: 100%;
    height: auto;
  }

  .home-image1,
  .home-image2,
  .home-image3,
  .home-image4 {
    width: 100%;
    height: auto;
    transition: transform 0.6s;
  }

  .home-image1 {
    display: none;
  }

  .home-image2 {
    display: block;
    width: 220px;
    padding-top: 20px;
    transform: rotate(5deg);
  }

  .home-image3 {
    display: block;
    width: 80%;
    margin: 30px 0 -40px 20%;
    max-width: 600px;
    transform: rotate(5deg);
  }

  .home-image4 {
    display: none;
  }

  .step {
    margin: 40px 0 0 0;
  }

  #blending-steps .step {
    margin: 0;
  }

  #blending-steps .step1,
  #blending-steps .step2,
  #blending-steps .step3 {
    margin-left: -10px;
    max-width: 90px;
    text-align: center;
  }

  #blending-steps .step h4 {
    margin: -10px 0 14px 0;
  }

  span.step1,
  span.step2,
  span.step3 {
    display: block;
    padding: 20px 20px 14px 20px;
    font-family: 'NanumPenScript', cursive;
    font-weight: 300;
    font-size: 34px;
    text-transform: uppercase;
    margin: 0 0 0 -20px;
    position: relative;
    border-radius: 40px;
    z-index: 2;
  }

  span.step1 {
    background-color: #f4e6f2;
    transform: rotate(1deg);
  }

  span.step2 {
    background-color: #c9e1f2;
    transform: rotate(-1deg);
    margin-bottom: 5px;
  }

  span.step3 {
    background-color: #dccfbb;
    transform: rotate(2deg);
  }

  .step h4 {
    position: relative;
    font-family: 'TrimPosterCompressed', sans-serif;
    font-weight: 400;
    font-size: 62px;
    line-height: 40px;
    display: block;
    margin: 40px 0 0 0;
    vertical-align: bottom;
    font-size: 62px;
    line-height: 50px;
    margin: -10px 0 0 0;
    z-index: 1;
  }

  a.get-started {
    background: #199776;
    width: 30px;
    height: 30px;
    display: inline-block;
    color: #ffffff;
    border-radius: 50%;
    text-decoration: none;
    text-align: center;
    padding: 20px;
    font-size: 32px;
    line-height: 30px;
    margin-right: -30px;
    margin-bottom: -10px;
  }

  a.get-started:hover {
    background: #237f5e;
  }

  @media only screen and (min-width: 600px) {
    .home-image1 {
      display: block;
      position: absolute;
      width: 40vw;
      top: -58vw;
      right: calc(-26vw - 60px);
      z-index: 2;
      transform: rotate(-8deg);
      margin: 10px 10%;
      max-width: 600px;
    }

    .home-image2 {
      width: 280px;
      padding-top: 30px;
    }

    .home-image3 {
      position: absolute;
      width: 45vw;
      top: -34vw;
      right: -15%;
      z-index: 2;
      transform: rotate(15deg);
    }

    .step {
      padding-left: 130px;
    }

    #blending-steps .step {
      padding: 0;
    }

    span.step1,
    span.step2,
    span.step3 {
      padding: 30px 30px 20px 30px;
      transform: rotate(0deg);
      font-size: 36px;
      margin: 10px 0 0 -160px;
    }

    span.step1 {
      transform: rotate(2deg);
      width: 410px;
    }

    span.step2 {
      transform: rotate(-1deg);
      width: 420px;
    }

    span.step3 {
      transform: rotate(1deg);
      width: 430px;
    }

    .step h4 {
      font-size: 100px;
      margin-top: -50px;
      line-height: 80px;
    }

    #blending-steps .step1,
    #blending-steps .step2,
    #blending-steps .step3 {
      display: inline-block;
      margin-left: -20px;
    }
  }

  @media only screen and (min-width: 768px) {
    .home-image4 {
      display: block;
      position: absolute;
      width: 36vw;
      top: 80px;
      right: calc(-730px + 50vw);
      z-index: 0;
      transform: rotate(-3deg);
      max-width: 600px;
    }

    .step p {
      max-width: 500px;
    }
  }

  @media only screen and (min-width: 1064px) {
    .home-image1 {
      width: 500px;
      top: -80%;
      right: -42%;
      transform: rotate(-20deg);
    }

    .home-image1:hover {
      transform: rotate(-19deg);
    }

    .home-image2 {
      width: 320px;
      padding-top: 40px;
    }

    .home-image3 {
      width: 450px;
      top: -120%;
      right: -20%;
    }

    .home-image3:hover {
      transform: rotate(14deg);
    }

    .home-image4 {
      width: 380px;
      top: 60px;
      right: auto;
      left: -480px;
      transform: rotate(0deg);
    }

    .home-image4:hover {
      transform: rotate(1deg);
    }

    .step {
      padding: 0;
    }

    .step p {
      max-width: none;
      line-height: 1.5;
    }

    #blending-steps .step1,
    #blending-steps .step2,
    #blending-steps .step3 {
      margin-left: -40px;
      transform: rotate(-3deg);
    }
  }
{% endstylesheet %}
