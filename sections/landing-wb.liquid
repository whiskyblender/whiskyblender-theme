    },
    {
      "type": "textarea",
      "id": "step1_text",
      "label": "Step 1 Text",
      "default": "Select from a range of whiskies to create your own unique blend."
    },
    {
      "type": "text",
      "id": "step2_title",
      "label": "Step 2 Title",
      "default": "BRAND IT"
    },
    {
      "type": "textarea",
      "id": "step2_text",
      "label": "Step 2 Text",
      "default": "Select from a range of casks to mature your blend in."
    },
    {
      "type": "text",
      "id": "step3_title",
      "label": "Step 3 Title",
      "default": "BOTTLE IT"
    },
    {
      "type": "textarea",
      "id": "step3_text",
      "label": "Step 3 Text",
      "default": "Give your blend a name and share it with the world."
    },
    {
      "type": "url",
      "id": "start_link",
