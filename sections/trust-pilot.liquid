{{ 'glide.core.css' | asset_url | stylesheet_tag }}
{{ 'glide.min.js' | asset_url | script_tag }}



<section class="banding">
  <article class="max">
    <div class="glide" id="glide">
      <div class="glide__track" data-glide-el="track" style="overflow:unset;">
        <ul class="glide__slides trustpilot" style="padding:20px;">
          {% assign reviews = '[{caption: "The taste and quality is absolutely excellent...", link: "https://uk.trustpilot.com/reviews/6733ca8c862f6bb435709247"},{caption:"Everything about this company is just perfection...", link:"https://uk.trustpilot.com/reviews/672d396e455fbdcded358bc3"}]' %}

          {% for review in reviews %}
            <div style="width: auto; margin-right: 40px;">
              <li class="glide__slide">
                <a href="https://uk.trustpilot.com/reviews/6733ca8c862f6bb435709247" target="_blank">
                  <span class="stars"></span>{{ review.caption -}}
                </a>
              </li>
            </div>
          {% endfor %}
        </ul>
      </div>
    </div>

    <button onclick="window.open('https://uk.trustpilot.com/review/whiskyblender.com')" class="secondary-button">
      Review on Trustpilot
    </button>
  </article>
</section>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
  var glide = new Glide('#glide', {
    type: 'carousel',
    hoverpause: true,
    perView: 2,
  })


  glide.mount()
{% endjavascript %}
{% schema %}
{
  "name": "Trust Pilot",
  "settings": [
    {
  "type": "textarea",
  "id": "reviews",
  "label": "reviews"
}

  ],
    "presets": [{ "name": "Trust Pilot" }],

}
{% endschema %}
