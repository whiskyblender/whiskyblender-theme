{{ 'glide.core.css' | asset_url | stylesheet_tag }}
{{ 'glide.min.js' | asset_url | script_tag }}

<section class="banding">
  <article class="max">
    <div class="glide" id="glide">
      <div class="glide__track" data-glide-el="track" style="overflow:unset;">
        <ul class="glide__slides trustpilot" style="padding:20px;">

          {% if section.settings.review_1_text %}
            <div style="width: auto; margin-right: 40px;">
              <li class="glide__slide">
                <a href={{ section.settings.review_1_url }} target="_blank">
                  <span class="stars"></span>{{ section.settings.review_1_text }}
                </a>
              </li>
            </div>
          {% endif %}
        </ul>
      </div>
    </div>

    <button onclick="window.open('https://uk.trustpilot.com/review/whiskyblender.com')" class="secondary-button">
      Review on Trustpilot
    </button>
  </article>
</section>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
  var glide = new Glide('#glide', {
    type: 'carousel',
    hoverpause: true,
    autoplay: 3000,
    perView: 2,
  })


  glide.mount()
{% endjavascript %}
{% schema %}
{
  "name": "Trust Pilot",
  "settings": [
    {
  "type": "text",
  "id": "review_1_text",
  "label": "review_1_text"
  },
  {
  "type": "url",
  "id": "review_1_url",
  "label": "review_1_url"
  }

  ],
    "presets": [{ "name": "Trust Pilot" }],

}
{% endschema %}
