<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <section class="standard">
    <article class="upwards">
      <p class="intro">
        {{ collection.description }}
      </p>

      <ul class="product-list">
        {%- for product in collection.products -%}
          {% render 'product-display', product: product %}
        {% endfor %}
      </ul>
    </article>
  </section>
</div>
<section class="banding">
  <article class="max">
    <button onclick="location.href='/collections';" class="secondary-button">Other collections</button>
  </article>
</section>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings":[]
}
{% endschema %}
