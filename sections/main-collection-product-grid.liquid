<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <section class="standard">
    <article class="upwards">
      <p class="intro">
        {{ collection.description }}
      </p>

      <ul class="product-list">

          {%- for product in collection.products -%}
          <li class="product-list-card">
            <a
              href="{{ product.url }}"
              style="background-image: url({{ product.featured_image | img_url: '1000x1000' }})"
            >
              <img alt=" Product image of whisky bottle" src="{{ product.featured_image | img_url: '1000x1000' }}">
              <span class="deetz single-casks-details">
                <h4>{{ product.title }}</h4>
                <p>{{ product.type | truncate: 30 }}</p>
                <div class="reveal">
                  {% if product.available == false %}
                    <!-- Product is out of stock -->
                    <sup> Out of stock</sup>
                  {% else %}
                    <sup class="buy pulse">{{ product.price | money }}</sup>
                  {% endif %}
                </div>
              </span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </article>
  </section>
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings":[]
}
{% endschema %}
