<section class="standard">
  <article class="hang-right">
    <h3>{{ section.settings.title }}</h3>
    <p>
      {{ section.settings.description }}
    </p>
    <ul class="features">
      {% for block in section.blocks %}
        <li>
          <a class=" button-faq" href="{{ block.settings.faq_link }}">{{ block.settings.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </article>
</section>
{% schema %}
{
  "name": "Find - FAQ",
  "presets": [{ "name": "Find - FAQ WB" }],
  "tag": "div",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Header Title",
      "default": "FAQ"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Here are some frequently asked questions."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Title",
          "default": "What is the meaning of life?"
        },
        {
          "type": "url",
          "id": "faq_link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}

